#ifndef LSSCONSOLE
#define LSSCONSOLE

#include <thread>
#include <iostream>
#include <string>
#include <termios.h>

#include "lssmanager.h"

#ifndef INFO
#include "info.h"
#endif

#include "../md5/md5.h"

class LssManager;

class LssConsole
{

public:

	LssConsole(LssManager* pDiskManager)
	{
		_diskManager = pDiskManager;
		_onRun = true;
	}

	void start();
	void stop();
	
	std::thread* getThread() const 
	{
		return _thread;
	}

private:

	static void callRun(LssConsole* pConsole);
	void run();
	void title();
	bool _onRun;
	std::thread* _thread;
	LssManager* _diskManager;
};



#endif
